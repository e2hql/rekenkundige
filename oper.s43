;----------------------------------------------------------------------------------------------
; Os registrados de R4, R5 e R6 nessa versão inicial devem conter os valores das operações
; SOMA
; R4, R5 = PARCELAS 
; R6 = SOMA OU TOTAL
;-----------------------------------------------------------------------------------------------
; SUBTRAÇÃO
; R4 = MINUENDO
; R5 = SUBRTRAENDO
; R6 = RESTO OU DIFERENÇA 
;----------------------------------------------------------------------------------------------
; MULTIPLICAÇÃO
; R4, R5 =  FATORES
; R6 = PRODUTO
;----------------------------------------------------------------------------------------------
; DIVISÃO
; R4 = DIVIDENDO
; R5 = DIVISOR
; R6 = QUOCIENTE
;----------------------------------------------------------------------------------------------
#include "msp430g2553.h"
;----------------------------------------------------------------------------------------------
        NAME   OPER
        PUBLIC SOMA_OPER, SUB_OPER, MULT_OPER, DIV_OPER
        RSEG   CODE           
;----------------------------------------------------------------------------------------------
SOMA_OPER ; REALIZA O CALCULO DE SOMA
;----------------------------------------------------------------------------------------------          
        add.w     R4,R5
        mov.w     R5,R6
        nop
        ret
;----------------------------------------------------------------------------------------------
SUB_OPER ; REALIZA O CALCULO DE SUBTRAÇÃO
;----------------------------------------------------------------------------------------------         
        sub.w     R5,R4
        mov.w     R4,R6
        nop
        ret
;----------------------------------------------------------------------------------------------
MULT_OPER ; REALIZA O CALCULO DE MULTIPLICAÇÃO
;----------------------------------------------------------------------------------------------         
           push      R7         ; ISOLA O VALOR ORIGINAL ANTES DE INICIAR AS VERIFICAÇÕES
           call      #VALIDAR_VAR
           cmp.b     #000C3h,R7
           jnz       NCALC
CALC:      nop
           jmp       EXIT_MULT
NCALC:                          ; EXISTE ALGUM TERMO INFORMADO QUE NÃO PODE SER CALCULADO POIS ULTRAPASSA O LIMITE DE 8 BITS 
VERTALL:   cmp.b     00081h,R7
           jnz       VER14BIT
           mov.w     #00000h,R4
           mov.w     #00000h,R5
           jmp       EXIT_MULT
VER14BIT:  cmp.b     #00079h,R7 ; VERIFICA SE O PRIMEIRO TERMO ESTA OK. NO CASO O VALOR VERIFICADO DE R4
           jnz       NOT79
           mov.w     #00000h,R4
           jmp       EXIT_MULT
NOT79:     cmp.b     #00080h,R7
           jnz       EXIT_MULT 
           mov.w     #00000h,R5                
EXIT_MULT: pop       R7
           ret
;----------------------------------------------------------------------------------------------
;----------------------------------------------------------------------------------------------
DIV_OPER ; REALIZA O CALCULO DE DIVISÃO
;----------------------------------------------------------------------------------------------         
        nop
        ret
;----------------------------------------------------------------------------------------------
;----------------------------------------------------------------------------------------------
LSB ; OBTEM O BYTE MENOS SIGNIFICATIVO
;----------------------------------------------------------------------------------------------
        mov.b      R4,R5
        nop     
        ret 
;----------------------------------------------------------------------------------------------
;----------------------------------------------------------------------------------------------
MSB ; REALIZA A ROTAÇÃO PARA A DIREITA AFIM DE OBTER O BYTE MAIS SIGNIFICATIVO
;----------------------------------------------------------------------------------------------
        rra         R4
        rra         R4
        rra         R4
        rra         R4
        rra         R4
        rra         R4
        rra         R4
        rra         R4
        mov.b       R4,R4
        nop
        ret 
;----------------------------------------------------------------------------------------------
R4_IS_8BIT ; INFORMA AO REGISTRADOR DE STATUS R6 SE O CONTEUDO DOS REGISTRADORES SAO DE 8 BITS
           ; SE R7 = 00001h REGISTRADOR R4 CONTEM UM VALOR DE 8 BITS
           ; SE R7 = 00000h REGISTRADOR R4 NÃO CONTEM UM VALOR DE 8 BITS
;----------------------------------------------------------------------------------------------
          push.w      R4 ; ADICIONA VALOR INFORMADO A PILHA
          rra         R4
          rra         R4
          rra         R4
          rra         R4
          rra         R4
          rra         R4
          rra         R4
          rra         R4
          mov.b       R4,R4
          cmp.b       #0,R4
          jnz         R4NOT_8BIT
R4IS_8BIT:  
          mov.w     #00001h,R7
          jmp       EXIT_R4_TST     
R4NOT_8BIT: 
          mov.w     #00000h,R7          
EXIT_R4_TST:         
          pop.w     R4  ; RESTAURA O VALOR
          ret  
;----------------------------------------------------------------------------------------------
;----------------------------------------------------------------------------------------------
R5_IS_8BIT ; INFORMA AO REGISTRADOR DE STATUS R6 SE O CONTEUDO DOS REGISTRADORES SAO DE 8 BITS
           ; SE R7 = 000C3h REGISTRADOR R4 E R5 CONTEM UM VALOR DE 8 BITS
           ; SE R7 = 00079h REGISTRADOR R4 NAO CONTEM VALOR VALOR DE 8 BITS MAS REGISTRADOR R5 CONTEM
           ; SE R7 = 00080h REGISTRADOR R4 CONTEM UM VALOR DE 8 BITS MAS REGISTRADOR R5 NÃO CONTEM 
           ; SE R7 = 00081h REGISTRADOR R4 NÃO CONTEM UM VALOR DE 8 BITS E R5 NÃO CONTEM UM VALOR DE 8 BITS
;----------------------------------------------------------------------------------------------
          push.w      R5
          rra         R5
          rra         R5
          rra         R5
          rra         R5
          rra         R5
          rra         R5
          rra         R5
          rra         R5
          mov.b       R5,R5
          cmp.b       #0,R5
          jnz         R5NOT_8BIT
R5IS_8BIT:
          cmp.b       #00001h,R7
          jnz         R4NBIT
R4SBIT:   mov.w       #000C3h,R7
          jmp         EXIT_R5_TST        
R4NBIT:   mov.w       #00079h,R7          
          jmp         EXIT_R5_TST
R5NOT_8BIT:
          cmp.b       #00001h,R7
          jnz         _R4NBIT
_R4SBIT:  mov.w       #00080h,R7
          jmp         EXIT_R5_TST
_R4NBIT:  mov.w       #00081h,R7 
EXIT_R5_TST:
          pop.w       R5 ; RESTAURA O VALOR
          ret  
;----------------------------------------------------------------------------------------------
;----------------------------------------------------------------------------------------------
VALIDAR_VAR ; VALIDA OS VALORES INFORMADOS NOS REGISTRADORES PARA A REALIZAÇÃO DA OPERAÇÃO
;----------------------------------------------------------------------------------------------
           call      #R4_IS_8BIT ; VALIDA O VALOR INFORMADO NO REGISTRADOR R4
           call      #R5_IS_8BIT ; VALIDA O VALOR INFORMADO NO REGISTRADOR R5
           ret
;----------------------------------------------------------------------------------------------         
;----------------------------------------------------------------------------------------------
        END  
;----------------------------------------------------------------------------------------------
